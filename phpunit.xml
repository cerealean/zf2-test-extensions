<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="./bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="zf2-test-extensions">
            <directory>./tests/**</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">
                ./src/**
            </directory>
        </whitelist>
        <blacklist>
            <directory>
                ./vendor/**
            </directory>
        </blacklist>
    </filter>
</phpunit>
